{
  "manifest_version": 2,
  "name": "Image Search Extension",
  "version": "1.0",
  "description": "Allows you to search the internet for an image",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "48": "icon.png"
    },
    "default_popup": "popup.html"
  }
}
